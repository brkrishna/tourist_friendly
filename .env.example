# Environment variables template for Vigilant Voyager
# Copy this file to .env.local for development

# Application URL (automatically set by Vercel in production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Maps Integration (optional for MVP)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# AI Service Configuration (optional for MVP - using mock data)
AI_SERVICE_ENDPOINT=https://api.openai.com/v1
AI_SERVICE_API_KEY=your_openai_api_key_here

# Database (currently using mock JSON data)
DATABASE_URL=file:./dev.db

# Authentication (for future implementation)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Analytics and Monitoring (optional)
NEXT_PUBLIC_ANALYTICS_ID=
VERCEL_ANALYTICS_ID=

# Performance Monitoring (optional)
SENTRY_DSN=

# Feature Flags for production
NEXT_PUBLIC_ENABLE_MAPS=false
NEXT_PUBLIC_ENABLE_AI_CHAT=false
NEXT_PUBLIC_ENABLE_REAL_DATA=false